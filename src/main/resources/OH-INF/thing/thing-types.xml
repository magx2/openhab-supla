		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

		<channel-type id="dimmer-channel">
				<item-type>Dimmer</item-type>
				<label>%channel-type.supla.dimmer-channel.label</label>
		</channel-type>

		<channel-type id="toggle-gate-channel">
